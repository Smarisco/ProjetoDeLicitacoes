@{
    ViewData["Title"] = "Cadastrar";
}

@model Licitacao
@section scripts
    {
    <script src="@Url.Content("~/Scripts/Cadastrar.js")" type="text/javascript"></script>
    }

<h2>Cadastrar/Editar Licitação</h2>

<form asp-action="Salvar" method="post">
    <div class="form-group">
        <label asp-for="Numero"></label>
        <input asp-for="Numero" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataAbertura"></label>
        <input asp-for="DataAbertura" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
    </div>
    </br>
    <button type="submit" class="btn btn-primary" value="Salvar" onclick="Salvar_Click()">Salvar</button>
    <!-- O botão Editar pode redirecionar para uma ação de edição específica -->
    <a href="@Url.Action("Editar")@*, new { id = Model.Id })" *@ class="btn btn-warning">Editar</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar para a Lista</a>
</form>

